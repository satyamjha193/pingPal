  <div class="rooms">
    <% for(let i=1; i<=3; i++) { %>
      <div class="room-card">
        <h3>Room <%= i %></h3>
        <% const status = rooms[i] && rooms[i].size >= 10 ? 'Occupied' : 'Vacant'; %>
