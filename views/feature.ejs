  .hero-image {
    max-width: 80%;           /* image takes up most of the width on smaller screens */
    margin-top: 30px;
  }

  .hero-image img {
    max-width: 100%;          /* scale image fully within container */
  }
}

@media (max-width: 480px) {
  .hero-image {
    max-width: 90%;           /* slightly larger on very small screens */
  }
}

