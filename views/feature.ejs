    body {
      margin: 0;
      font-family: 'Segoe UI', sans-serif;
      background-color: #0a0a0a;
      color: white;
    }

    .gradient-section {
      background: linear-gradient(to bottom, #4a154b 0%, #0a0a0a 100%);
      padding: 80px 20px 60px;
      text-align: center;
    }

    .gradient-section h2 {
      font-size: 2.5rem;
      font-weight: 600;
      margin-bottom: 15px;
    }

    .gradient-section h2 .highlight {
      color: #b085ff;
    }

    .gradient-section p {
      color: rgba(255, 255, 255, 0.7);
      max-width: 600px;
      margin: 0 auto 50px;
      font-size: 1.1rem;
      line-height: 1.6;
    }

    .features-grid {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 20px;
      max-width: 1200px;
      margin: 0 auto;
    }

    .feature-card {
      background: rgba(255, 255, 255, 0.03);
      border: 1px solid rgba(255, 255, 255, 0.1);
      border-radius: 16px;
      padding: 25px;
      width: 100%;
      max-width: 320px;
      text-align: left;
      transition: all 0.3s ease;
    }

    .feature-card:hover {
      transform: translateY(-5px);
      border-color: #b085ff;
      box-shadow: 0 4px 10px rgba(176, 133, 255, 0.2);
    }

    .feature-card h3 {
      font-size: 1.2rem;
      margin-bottom: 10px;
      display: flex;
      align-items: center;
      gap: 10px;
      color: #fff;
    }

    .feature-card p {
      color: rgba(255, 255, 255, 0.65);
      font-size: 0.95rem;
      line-height: 1.5;
    }

    @media (max-width: 768px) {
      .gradient-section h2 {
        font-size: 2rem;
      }
    }

    @media (max-width: 500px) {
      .features-grid {
        flex-direction: column;
        align-items: center;
        padding: 0 10px;
      }

      .feature-card {
        width: 100%;
        max-width: 100%;
      }
    }
   
    .hero {
  display: flex;
