  display: inline-block;
}

/* Hover effect */
.hero-text button:hover {
  background-color: #b085ff; /* lighter purple on hover */
  color: #0a0a0a;            /* text changes to dark */
  transform: translateY(-2px);
  box-shadow: 0 5px 15px rgba(176, 133, 255, 0.4);
}

/* Optional: active press effect */
.hero-text button:active {
  transform: translateY(0);
  box-shadow: 0 3px 8px rgba(176, 133, 255, 0.3);
}


    .hero-text h1 {
